<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team5.pat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.team5.pat.Session"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/HoloTheme" >
        <activity
            android:name="com.team5.pat.LockScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.team5.pat.RecordGraphActivity"
            android:label="@string/title_activity_record_graph"
            android:parentActivityName="com.team5.pat.HomeActivity" >
        </activity>
        <activity
            android:name="com.team5.pat.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.team5.pat.HomeActivity" >
        </activity>
        <activity
            android:name="com.team5.pat.HomeActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.team5.pat.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName="com.team5.pat.HomeActivity" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.team5.contact.ContactDetailsActivity"
            android:label="@string/title_activity_contact_details"
            android:parentActivityName="com.team5.pat.ContactActivity" >
        </activity>
    </application>

</manifest>