<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/backgroundColorSeekBar" >

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="2 March 2014"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/anxiety_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/date_text_view"
        android:layout_marginTop="28dp"
        android:text="@string/anxiety" />

    <TextView
        android:id="@+id/seriousness_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anxiety_text_view"
        android:layout_marginTop="30dp"
        android:text="@string/seriousness" />

    <TextView
        android:id="@+id/user_thought_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seriousness_text_view"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/seriousness_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_thought_text_view"
        android:layout_toRightOf="@+id/seriousness_text_view"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/anxiety_edit_text_ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seriousness_text_view"
        android:layout_alignLeft="@+id/seriousness_edit_text"
        android:ems="10"
        android:inputType="number" />
    
</RelativeLayout>