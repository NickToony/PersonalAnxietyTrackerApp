<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorSeekBar"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/social_fragment_signup_loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/commenttextfield1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/social_fragment_signup_loginText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" > 

            <TextView
                android:id="@+id/social_fragment_signup_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/centerCircleColour" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/commenttextfield1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/social_fragment_signup_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Username"
                    android:inputType="textNoSuggestions|text"
                    android:padding="@dimen/seek_bar_text_padding" />

                <TextView
                    android:id="@+id/social_fragment_signup_errorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/seek_bar_text_padding"
                    android:text=""
                    android:textColor="@color/centerCircleColour"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/commenttextfield1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/social_fragment_signup_emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/social_fragment_signup_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:padding="@dimen/seek_bar_text_padding" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/social_fragment_signup_errorEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/seek_bar_text_padding"
                        android:text=""
                        android:textColor="@color/centerCircleColour"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/social_fragment_signup_email" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/commenttextfield1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/social_fragment_signup_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/seek_bar_text_padding" />

                <TextView
                    android:id="@+id/social_fragment_signup_errorPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/seek_bar_text_padding"
                    android:text=""
                    android:textColor="@color/centerCircleColour"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/add_app_done_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/social_fragment_signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/commenttextfield1"
            android:padding="10dp"
            android:text="@string/social_fragment_signup_buttonText" />
    </LinearLayout>

</LinearLayout>